@model IEnumerable<Blog.Models.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout.cshtml";
}

<h2>Рекомендуемые книги</h2>

<p>
    @Html.ActionLink("Create New Book", "Create", null, new { @class = "book-show-actionbutton-btn", id="create-new-btn" })
</p><br />

@{
    foreach (Blog.Models.Book item in Model)
    {
        <div class="book-show">
            <div class="book-show-booksection">
                <div class="book-show-booksection-img">
                    @{
                        if (item.CoverImage != null)
                        {
                            var imgSrc = $"data:image/gif;base64,{Convert.ToBase64String(item.CoverImage)}";
                            <img src="@imgSrc" style="height: 100px;" />
                        }
                    }
                </div>
                <div class="book-show-booksection-texts">
                    <p class="book-show-booksection-texts-title">@item.Name</p>
                    <p class="book-show-booksection-texts-author">@item.Author</p>
                    <p class="book-show-booksection-texts-description">@item.Description</p>
                </div>
            </div>
            <div class="book-show-actionbutton">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "book-show-actionbutton-btn" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "book-show-actionbutton-btn" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "book-show-actionbutton-btn" })
            </div>
        </div>
    }
}


